            <div class="col-md-3 resizable-div" style="display: flex; flex-direction: column; resize: horizontal; height: 100%; overflow: hidden; display: inline-block; max-height: 80vh;">


<div class="table-responsive" style="flex: 1; overflow: auto; min-height: 70vh; height: 100%;">
    <table class="table table-dark table-borderless navbar-table" style="margin-bottom: 0;" id="navbar-table">
        <tbody id="sortable">
        {% for parent in parent_pages %}
        <tr class="ui-state-default draggable" draggable="true" id="{{parent._id|string()}}">
            <td>
                <a href="{{ url_for('page', page_id=parent._id|string()) }}" style="text-decoration: none;" class="text-light">{{ parent.title }}</a>
            </td>
            <td>
                <table class="table table-dark table-borderless navbar-table">
                    {% for child in child_pages if child.parent_id == parent._id %}
                    <tr>
                        <td>
                            <a href="{{ url_for('page', page_id=child._id|string()) }}" style="text-decoration: none;" class="text-light">{{ child.title }}</a>
                        </td>
                    </tr>
                    {% endfor %}
                </table>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
</div>




