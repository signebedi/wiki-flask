<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {# <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"> #}

    <!-- Darkly Bootstrap CSS -->
    <link href="https://bootswatch.com/5/darkly/bootstrap.min.css" rel="stylesheet">

    <!-- Add Route to Favicon -->
    <link rel='shortcut icon' type='image/x-icon' href='{{ url_for("site_favicon") }}' />

    <title>{% block title %}{% endblock %} - WikiFlask</title>

</head>

<body class="bg-dark text-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ url_for('home') }}"><img src="{{url_for('site_logo')}}" alt="Site Logo" style="height: 30px; width: auto; margin-right: 10px;">WikiFlask</a>
        </div>
    </nav>

    <div class="container mt-3">
        <div class="row">
            <div class="col-md-3">
                <div class="list-group">
                    <a href="{{ url_for('create') }}" class="list-group-item list-group-item-action bg-secondary text-light">Create New Page</a>
                    {% block sidebar %}
                    {% for page in pages %}
                    <a href="{{ url_for('page', page_id=page._id) }}" class="list-group-item list-group-item-action bg-secondary text-light">{{ page.title }}</a>
                    {% endfor %}
                    {% endblock %}
                </div>
            </div>
            <div class="col-md-9">
                <h1>{% block header %}{% endblock %}</h1>
                <div class="bg-secondary p-3 rounded">
                    {% block content %}{% endblock %}
                </div>
            </div>
        </div>
    </div>

    <!-- Optional JavaScript; choose one of the two! -->
    {% block scripts %}{% endblock %}
    
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>



