<script>

$( function() {
    $( "#sortable" ).sortable({
        placeholder: "ui-state-highlight",
        update: function(event, ui) {
            var updatedOrder = $(this).sortable('toArray');
            
            $.ajax({
                url: '/update_order',
                type: 'POST',
                data: JSON.stringify(updatedOrder),
                contentType: 'application/json; charset=utf-8',
                success: function(response){
                    console.log(response);
                },
                error: function(error){
                    console.log(error);
                }
            });
        }
    });
    $( "#sortable" ).disableSelection();
});
</script>


    <script>
    document.getElementById('search').addEventListener('keyup', function() {
        var input = this.value;
        if(input.length > 2){
            fetch('/search?q=' + input)
            .then(response => response.json())
            .then(data => {
                var dropdown = document.getElementById('dropdown');
                dropdown.innerHTML = ""; // Clear the current dropdown contents
                data.forEach(function(item) {
                    var div = document.createElement('div');
                    div.className = "search-dropdown-item";
                    div.innerHTML = "<strong>" + item.title + "</strong><br>" + item.content.substring(0, 100) + "...";
                    div.addEventListener('click', function() {
                        window.location.href = '/page/' + item._id;
                    });
                    dropdown.appendChild(div);
                });
                if(data.length > 0) {
                    dropdown.style.display = "block";
                    dropdown.style.backgroundColor = "rgba(0, 0, 0, 0.25)";
                    dropdown.style.color = "#fff";
                    dropdown.style.width = "15vw";
                } else {
                    dropdown.style.display = "none";
                }
            });
        }
    });

    </script>

